<section>

  <div class="container">
    <div class="card" style="min-width:900px">
      <div class="card-body">
      <h4 class="card-title">All Features</h4>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Unit price</th>
                <th>Usage</th>
                <th>Max Unit Limit</th>
                <th colspan=3>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @featrues.each do |featrue| %>
                <tr>
                  <td><%= featrue.name %></td>
                  <td><%= featrue.code %></td>
                  <td><%= featrue.unit_price %></td>
                  <td><%= featrue.usage %></td>
                  <td><%= featrue.max_unit_limit %></td>
                  <td><%= link_to 'Show', admin_featrue_path(featrue.id), remote: true %></td>
                  <td><%= link_to 'Edit', edit_admin_featrue_path(featrue)%></td>
                  <td><%= link_to 'Destroy', admin_featrue_path(featrue.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>

        <%= link_to 'New Feature', new_admin_featrue_path, class: "btn btn-success" %>
  </div>
  </div>
  </div>

<div id='feature-content'></div>
</section>
