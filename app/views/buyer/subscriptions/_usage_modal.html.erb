
<div class="modal fade" id="usage-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Subscription Features</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
        <div class="table-responsive">
          <%= form_with model: @subscription, url: increase_usage_buyer_subscription_path do |form|%>
            <table class="table table-striped">
              <tr>
                <th>Name</th>
                <th>Unit Price</th>
                <th>Unit Limit</th>
                <th>Usage</th>
              </tr>
              <%= render partial: 'subscription_features', collection: subscription_features(@subscription), locals: {form: form, subscription: @subscription}%>
            </table>
          <% end %>
        </div>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    var current_val = $("#subscription_usage").val()
    alert (current_val)
    $('#subscription_usage').on('input', function() {
        alert("Change to " + this.value);
    });
  })
</script>
